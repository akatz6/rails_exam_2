<h1>Welcome</h1>

<h3>Register Here</h3>


<%= form_for @user do |f| %>
  <%= f.label :first_name %>:
  <%= f.text_field :first_name %><br />

  <%= f.label :last_name %>:
  <%= f.text_field :last_name %><br />

  <%= f.label :email %>:
  <%= f.email_field :email %><br />

  <%= f.label :password %>:
  <%= f.password_field :password %><br />


  <%= f.submit %>
<% end %>


<%= form_for @user, :url => sessions_path do |f| %>
  <%= f.label :email %>:
  <%= f.email_field :email %><br />

  <%= f.label :password %>:
  <%= f.password_field :password %><br />

  <%= f.submit %>
<% end %>

<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>